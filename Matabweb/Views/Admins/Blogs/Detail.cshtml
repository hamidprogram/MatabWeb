@model BE.Blog

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>مدیریت</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admins",new {IsRegister = true})">داشبورد</a></li>
                        <li class="breadcrumb-item active">مدیریت وبلاگ @Model.ID</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fa fa-text-width"></i>
                                مشاهده وبلاگ
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <dl class="dl-horizontal">
                                <dt>شماره وبلاگ</dt>
                                <dd>@Model.ID</dd>

                                <dt>نام وبلاگ</dt>
                                <dd>@Model.NameBlgo</dd>

                                <dt>توضیحات مختصر</dt>
                                <dd>@Model.ShortExp</dd>

                                <dt>متن وبلاگ</dt>
                                <dd>@Model.Text</dd>

                                <dt>عکس وبلاگ</dt>
                                <dd><img src="~/assets/images/@Model.ID" /></dd>

                                <dt>تگ ها</dt>
                                <dd>@Model.Tags</dd>

                                <dt>تاریخ</dt>
                                <dd>@Model.Deate</dd>

                                <dt>زمان</dt>
                                <dd>@Model.Time</dd>
                            </dl>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <div>
                    <a asp-action="Delete" asp-route-id="@Model.ID"><i class="fa fa-remove"></i></a> |
                    <a asp-action="Edit" asp-route-id="@Model.ID"><i class="fa fa-edit"></i></a> |
                    <a href="@Url.Action("Blogs","Admins")" ><i class="fa fa-backward"></i></a>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


