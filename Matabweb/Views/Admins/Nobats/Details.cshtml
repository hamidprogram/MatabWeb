@model BE.Nobat

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>مدیریت نوبت</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admins",new {IsRegister = true})">داشبورد</a></li>
                        <li class="breadcrumb-item active">مدیریت نوبت @Model.ID</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    شماره ی کاربر
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CustomerID)
                                </dd>
                                <dt class="col-sm-2">
                                    تاریخ
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Deate)
                                </dd>
                                <dt class="col-sm-2">
                                    ساعت حضور
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Time)
                                </dd>
                                <dt class="col-sm-2">
                                    وضعیت
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Condition)
                                </dd>
                            </dl>
                        </div>
                        <div>
                            <a asp-action="DeleteNobat" asp-route-id="@Model.ID">حذف</a> |
                            <a asp-action="BackToNobat" asp-route-Id="@Model.ID">تغییر وضعیت</a> |
                            <a asp-action="Nobats">بازگشت</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>