    <!-- ======= Recent Blog Posts Section ======= -->
    <section id="recent-blog-posts" class="recent-blog-posts">
        <div class="container" data-aos="fade-up">
            <header class="section-header">
                <p>مقالات</p>
            </header>
            <div class="row">
                @await Component.InvokeAsync("LastBlogsIndex")
            </div>
        </div>
    </section>
    <!-- End Recent Blog Posts Section -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">
            <header class="section-header">
                <p id="AboutUs">درباره ی ما</p>
            </header>
            <div class="row gy-4">
                <div class="col-lg-6">
                    <div class="row gy-4">
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-geo-alt"></i>
                                <h3>آدرس</h3>
                                <p>اصفهان هزار جریب<br>ساختمان تجاری افرا</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-telephone"></i>
                                <h3>شماره تماس</h3>
                                <p>09138742015<br>4247690</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-envelope"></i>
                                <h3>اینستاگرام و ایمیل</h3>
                                <p>hamid_program_pro<br>hamidprogram@gmail.com</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bi bi-clock"></i>
                                <h3>ساعات باز</h3>
                                <p>هر روز به جز روز های طعتیل<br>از ساعت 4 تا 8</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <form asp-action="Create" method="post" id="sa">
                        <div class="row gy-4">
                            <h3>گرفتن مشاوره</h3>
                            <div class="col-md-6">
                                <input type="text" name="FullName" class="form-control" placeholder="نام شما" required>
                            </div>
                            <div class="col-md-6 ">
                                <input type="text" class="form-control" name="PhoneNumber" placeholder="شماره تلفن" required>
                            </div>
                            <div class="col-md-12">
                                <input type="text" class="form-control" name="Subject" placeholder="موضوع" required>
                            </div>
                            <div class="col-md-12">
                                <textarea class="form-control" name="Descreption" rows="6" placeholder="توضیحات" required></textarea>
                            </div>
                            <div class="col-md-12 text-center">
                                @if (ViewBag.result == true)
                                {
                                    <script>alert("با شما تماس خواهیم گرفت")</script>
                                }

                                <button class="btn btn-primary" type="submit">ارسال</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Section -->
</main>
