
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <br />
    <section id="values" class="values">
        <div class="container">
            <form asp-action="Edit" asp-route-Id="@ViewBag.id" asp-route-customerid="@ViewBag.customerid" method="post">
                <label for="Deate">انتخاب تاریخ نوبت</label>
                <select class="form-select" name="Deate">
                    @{
                        BLL.Nobat_BLL bll = new BLL.Nobat_BLL();
                        List<string> deat = bll.deate();
                        foreach (var item in deat)
                        {
                            <option>@item</option>
                        }
                    }
                </select>
                <br />
                <label for="Time">انتخاب زمان حضور</label>
                <select class="form-select" name="Time">
                    <option>8:00</option>
                    <option>8:30</option>
                    <option>9:00</option>
                    <option>9:30</option>
                    <option>10:00</option>
                    <option>10:30</option>
                    <option>11:00</option>
                    <option>11:30</option>
                    <option>12:00</option>
                    <option>12:30</option>
                    <option>13:00</option>
                    <option>15:00</option>
                    <option>15:30</option>
                    <option>16:00</option>
                    <option>16:30</option>
                    <option>17:00</option>
                    <option>17:30</option>
                    <option>18:00</option>
                    <option>18:30</option>
                    <option>19:00</option>
                    <option>19:30</option>
                    <option>20:00</option>
                    <option>20:30</option>
                    <option>21:00</option>
                </select>
                <br />
                <button type="submit" class="btn btn-primary">تصحیح</button>
                @{
                    if(ViewBag.IsAdd == true)
                    {
                        <p>دوباره تلاش کنید</p>
                    }
                }
            </form>
        </div>
    </section>
</main>